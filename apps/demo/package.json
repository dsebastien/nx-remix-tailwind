{
  "private": true,
  "name": "demo",
  "description": "",
  "license": "",
  "scripts": {
    "prebuild": "rimraf ./public/build \"./app/styles/**/*.css\"",
    "build": "run-p build:*",
    "build:css": "npm run css:build --env production",
    "build:remix": "cross-env NODE_ENV=production npx remix build",
    "generate:css": "postcss styles --base ./styles --dir ./app/styles",
    "predev": "rimraf ./app/styles/**/*.css && npm run generate:css",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "npm run generate:css -- --watch",
    "postinstall": "npx remix setup node",
    "start": "npx remix-serve build"
  },
  "dependencies": {
    "@remix-run/react": "^1.0.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.0.6",
    "@remix-run/serve": "^1.0.6"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.0.6",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "concurrently": "7.0.0",
    "cross-env":  "7.0.3",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.12",
    "postcss-cli": "9.1.0",
    "postcss-import":  "14.0.2",
    "tailwindcss":  "3.0.23",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
